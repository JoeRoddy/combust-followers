{
  "dependencies": {
    "chat": "latest",
    "users": "latest",
    "notifications": "latest"
  },
  "installation": {
    "components/users/SocialContacts.jsx": {
      "imports": [
        "import FollowersList from \"../followers/FollowersList\";"
      ],
      "after": {
        "pattern": "const componentsByMode = {",
        "code": [
          "\n\tFollowers: <FollowersList displayFollowers />,",
          "\tFollowing: <FollowersList displayFollowing />,"
        ]
      }
    },
    "components/users/Profile.jsx": {
      "imports": [
        "import followerStore from \"../../stores/FollowerStore\";"
      ],
      "replace": {
        "pattern": "alert(\"combust install followers\");\n",
        "code": [
          "followerStore.followUser(userId);",
          "alert('Following User');"
        ]
      }
    }
  },
  "rules": {
    ".read": true,
    "followedIdsByUser": {
      "$uid": {
        "$influencerUid": {
          ".write": "auth.uid === $uid"
        }
      }
    },
    "followerIdsByUser": {
      "$influencerUid": {
        "$followerUid": {
          ".write": "auth.uid === $followerUid"
        }
      }
    }
  }
}
